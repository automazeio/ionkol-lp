---
import { Image } from "astro:assets";
import { m } from "../paraglide/messages.js";
---

<footer
  class="w-full bg-[#f9f9f9] flex flex-wrap flex-col md:flex-row justify-between px-8 md:px-16 lg:px-24 pt-12 pb-10 md:pb-0"
  role="contentinfo"
>
  <div
    class="flex flex-col items-center lg:items-start gap-2 my-4 md:my-0 md:mb-8 sm:text-center"
  >
    <Image src="/ionkolLogoNew.svg" alt="key" width={125} height={40} />
    <p class="text-lg text-left">{m["footer.tagline"]()}</p>
    <div class="w-56 border-1 border-red-200 border-t mt-2"></div>

    <div class="mt-5">
      <ul class="text-lg text-left">
        <li>{m["footer.locations.japan"]()}</li>
        <li>{m["footer.locations.korea"]()}</li>
        <li>{m["footer.locations.malaysia"]()}</li>
        <li>{m["footer.locations.singapore"]()}</li>
      </ul>
    </div>

    <div class="hidden md:block mt-5">
      <Image src="/instagramLogo.png" alt="key" width={24} height={24} />
    </div>
  </div>

  <nav
    aria-label="Footer Navigation"
    class="flex flex-wrap gap-8 sm:gap-12 justify-center"
  >
    <div class="flex flex-col h-full relative">
      <div>
        <h3
          class="text-[#0d0c22] text-lg font-semibold leading-normal tracking-tight mb-2 text-center sm:text-left"
        >
          {m["footer.services.title"]()}
        </h3>
        <ul class="flex flex-col text-center sm:text-left">
          <li>
            <a
              href="/features"
              class="text-lg leading-normal tracking-tight"
              data-link="/features"
            >
              {m["footer.services.explore"]()}
            </a>
          </li>
          <li>
            <a
              href="/features"
              class="text-lg leading-normal tracking-tight"
              data-link="/features"
            >
              {m["footer.services.analyze"]()}
            </a>
          </li>
        </ul>
      </div>

      <div class="flex flex-row gap-4 absolute w-64 top-[5.5rem] md:top-52 left-0">
        <a href="/terms" class="text-lg leading-normal tracking-tight" data-link="/terms">
          {m["footer.legal.privacyPolicy"]()}
        </a>
        <span>|</span>
        <a href="/terms" class="text-lg leading-normal tracking-tight" data-link="/terms">
          {m["footer.legal.termsOfService"]()}
        </a>
      </div>
    </div>

    <div>
      <h3
        class="text-[#0d0c22] text-lg font-semibold leading-normal tracking-tight mb-2 text-center sm:text-left"
      >
        {m["footer.getStarted.title"]()}
      </h3>
      <ul class="flex flex-col text-center sm:text-left">
        <li>
          <a
            href="/contactUs"
            class="text-lg leading-normal tracking-tight"
            data-link="/contactUs"
          >
            {m["footer.getStarted.bookDemo"]()}
          </a>
        </li>
        <li>
          <a
            href="/contactUs"
            class="text-lg leading-normal tracking-tight"
            data-link="/contactUs"
          >
            {m["footer.getStarted.contactUs"]()}
          </a>
        </li>
      </ul>
    </div>

    <div class="">
      <h3
        class="text-[#0d0c22] text-lg font-semibold leading-normal tracking-tight mb-2 text-center sm:text-left"
      >
        {m["footer.whoWeAre.title"]()}
      </h3>
      <ul class="flex flex-col text-center sm:text-left">
        <li>
          <a
            href="/aboutUs"
            class="text-lg leading-normal tracking-tight"
            data-link="/aboutUs"
          >
            {m["footer.whoWeAre.aboutUs"]()}
          </a>
        </li>
        <li>
          <a
            href="/resources"
            class="text-lg leading-normal tracking-tight"
            data-link="/resources"
          >
            {m["footer.whoWeAre.blog"]()}
          </a>
        </li>
        <li>
          <a
            href="/resources"
            class="text-lg leading-normal tracking-tight"
            data-link="/resources"
          >
            {m["footer.whoWeAre.faqs"]()}
          </a>
        </li>
      </ul>
    </div>
  </nav>
</footer>

<script is:inline>
  function updateFooterLinks() {
    const pathSegments = window.location.pathname.split("/");
    const currentLang = pathSegments[1] || "en";

    document.querySelectorAll("a[data-link]").forEach((link) => {
      const basePath = link.getAttribute("data-link");
      // Only update links that aren't external or anchor links
      if (
        basePath &&
        !basePath.startsWith("http") &&
        !basePath.startsWith("#")
      ) {
        link.href = `/${currentLang}${basePath}`;
      }
    });
  }

  document.addEventListener("DOMContentLoaded", updateFooterLinks);
</script>
