---
// Import necessary components
import Button from './ui/Button.astro';

const navItems = ['Solutions', 'Features', 'About', 'Contact', 'Pricing'];
---

<header id="navbar" class="navbar w-full z-50 fixed top-0 left-0 h-[84px] px-[65px] py-[22px] bg-white justify-between items-center inline-flex transition-all duration-300">
  <div class="text-center text-[#0d0c22] text-[28px] font-bold font-['Urbanist'] tracking-wide">iON</div>

  <nav>
    <ul class="flex gap-[2rem] list-none text-[#0d0c22] text-base font-normal font-['Mulish'] leading-normal tracking-tight">
      {navItems.map((item) => (
        <li class="cursor-pointer hover:text-[#ed707e] active:text-[#d55e6b] transition-colors duration-300">{item}</li>
      ))}
    </ul>
  </nav>

  <div class="flex gap-4">
    <Button text='Sign-up' type='outline'/>
    <Button text='Login' />
  </div>
</header>

<script>
  document.addEventListener('scroll', () => {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;
    if (window.scrollY > 0) {
      navbar.classList.add('bg-[#FFF8F8]', 'text-white', 'translate-y-0', 'shadow-lg');
      navbar.classList.remove('bg-white', 'text-[#0d0c22]', 'shadow-none');
    } else {
      navbar.classList.remove('bg-[#FFF8F8]', 'text-white', 'shadow-lg');
      navbar.classList.add('bg-white', 'text-[#0d0c22]', 'shadow-none');
    }
  });
</script>

<style>
  .navbar {
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  .shadow-lg {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  
  .shadow-none {
    box-shadow: none;
  }
</style>
