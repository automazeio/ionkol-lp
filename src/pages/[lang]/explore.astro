---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { Image } from "astro:assets";
import Button from "../../components/ui/Button.astro";
import ExploreInfoCard from "../../components/react/ExploreInfoCard.tsx";
import {
  filterTabImage,
  searchTabImage,
  saveTabImage,
  engagementTabImage,
  parametersTabImage,
} from "../../constants/htmlStrings";
import "../_index.css";

const exploreTabsData = [
  {
    title: "Filter",
    visualContent: filterTabImage,
    text: "Refine your search by applying advanced filters tailored to your needs.",
  },
  {
    title: "Search",
    visualContent: searchTabImage,
    text: "Use keywords to pinpoint influencers matching your goals.",
  },
  {
    title: "Save",
    visualContent: saveTabImage,
    text: "Organize your selected creators into custom lists for easy access.",
  },
];

const analyzeTabsData = [
  {
    title: "Parameters",
    visualContent: parametersTabImage,
    text: "Discover the essence of your audience with advanced analytics: explore follower demographics from location to age and more, to craft bespoke campaigns.",
  },
  {
    title: "Engagement",
    visualContent: engagementTabImage,
    text: "Elevate your influencer evaluation with engagement insights: measure interaction rates, and ensure every creator delivers genuine, impactful engagement.",
  },
];
---

<!-- Sections appear animation -->
<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    const cards = document.querySelectorAll(".animate-appear");
    cards.forEach((card) => observer.observe(card));
  });
</script>

<Layout title={"iON"}>
  <Navbar />

  <!-- Introduction section -->
  <div
    class="lg:w-[90%] mt-44 mx-auto flex flex-col lg:flex-row justify-center items-center gap-8"
  >
